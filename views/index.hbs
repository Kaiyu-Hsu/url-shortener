<div class="row mt-5 justify-content-center">
  <div class="card" style="width: 25rem;">
    <div class="card-header">
      <h5 class="card-title text-center mb-0">URL Shortener</h5>
    </div>
  
    <div class="card-body">
      <span class="row mb-3 justify-content-center" id="link-img">
        <i class="fas fa-link" ></i>
      </span>
  
      <form action="/" method="POST">
  
        <div class="form-group">
          <input type="url" class="form-control" name="originalUrl" id="originalUrl" placeholder="Input URL here"
            value="{{originalUrl}}">
        </div>
  
        {{#if randomUrl}}
        <div class="form-group text-center">
          <h3>Shortened URL:</h3>
          <a href="{{originalUrl}}" class="" id="randomUrl">{{randomUrl}}</a>
        </div>
        {{/if}}
        
        {{!-- button --}}
        <div class="row justify-content-center">
          <button type="submit" class="btn mr-2 btn-primary">Shorten</button>
          <a href="/" class="btn mr-2 btn-outline-primary">back</a>
          {{#if randomUrl}}
          <button type="button" class="btn mr-2 btn-success" data-toggle="modal" data-target="#exampleModal" id="copyBtn">Copy</button>
          <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">複製網址成功!!</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  {{randomUrl}}
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
          {{/if}}
        </div>
        
      </form>
    </div>
  </div>
</div>
